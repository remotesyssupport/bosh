#!/usr/bin/env ruby

# Copyright (c) 2009-2012 VMware, Inc.


gemfile = File.expand_path("../../Gemfile", __FILE__)

if File.exists?(gemfile)
  ENV["BUNDLE_GEMFILE"] = gemfile
  require "rubygems"
  require "bundler/setup"
end

$:.unshift(File.expand_path("../../lib", __FILE__))
require "cloud/ecloud"
require "irb"
require "irb/completion"
require "ostruct"
require "optparse"

config_file = nil

opts_parser = OptionParser.new do |opts|
  opts.on("-c", "--config FILE") { |file| config_file = file }
end

opts_parser.parse!

unless config_file
  puts opts_parser
  exit(1)
end

@config = YAML.load_file(config_file)
@config = @config["cloud"]["properties"] if @config["cloud"] # if a deployment manifest is passed

module ConsoleHelpers
  def cpi
    @cpi ||= ECloudCloud::Cloud.new(@config)
  end

  def ecloud
    cpi.client
  end

  def fog
    cpi.client
  end
end

cloud_config = OpenStruct.new(:logger => Logger.new(STDOUT))

Bosh::Clouds::Config.configure(cloud_config)

include ConsoleHelpers

begin
  require 'ruby-debug'
  puts "=> Debugger enabled"
rescue LoadError
  puts "=> ruby-debug not found, debugger disabled"
end

puts "=> Welcome to BOSH ECloud CPI console"
puts "You can use 'cpi' to access CPI methods"
puts "You can use 'fog' to access fog ECloud connection"

IRB.start